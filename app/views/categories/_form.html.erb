<div class="user-form-wrapper  c-flex">
 <%= form_with(model: category) do |form| %>
   <% if category.errors.any? %>
     <div style="color: red">
       <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

       <ul>
         <% category.errors.each do |error| %>
           <li><%= error.full_message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

   <div>
     <%#= form.label :name, style: "display: block" %>
     <%= form.text_field :name, placeholder: "Category Name"%>
   </div>

   <div>
     <%#= form.label :icon, style: "display: block" %>
     <%#= form.text_field :icon %>
   </div>
       <div class="cat-box-wrap c-flex">
         <p class="radio_text">Select an icon for category</p>

         <div class="check-boxes flex">
           <% Category::ICONS.each do |i| %>
             <div>
               <%= form.radio_button :icon, "#{i}.svg", id: i %>
               <label for="<%=i%>" class="custom-radio">
                <%=image_tag("#{i}.svg", alt:i, class: 'buttom_img')%>
             </div>
           <% end %>
         </div>
       </div>
  
   <div>
     <%= form.submit  class:'btn-blue' %>
   </div>
 <% end %>
</div>
